<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:background="@drawable/card1"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0.1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/chipp"
            android:id="@+id/chip"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBVA"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8600 1254 3032 9687"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/chip"/>
        <TextView
            android:id="@+id/da"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/pan"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/20"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/amount"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/pan"/>
        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/da"/>
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 000"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/sum"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/date"/>

        <TextView
            android:id="@+id/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISA"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#fff"
            android:textSize="30sp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>